{% extends 'base.html.twig' %}

{% block body %}
    <h1>Hotel</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ hotel.id }}</td>
            </tr>
            <tr>
                <th>Stars</th>
                <td>{{ hotel.stars }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ hotel.name }}</td>
            </tr>
            <tr>
                <th>Address</th>
                <td>{{ hotel.address }}</td>
            </tr>
            <tr>
                <th>Zipcode</th>
                <td>{{ hotel.zipcode }}</td>
            </tr>
            <tr>
                <th>City</th>
                <td>{{ hotel.city }}</td>
            </tr>
            <tr>
                <th>Phone</th>
                <td>{{ hotel.phone }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ hotel.email }}</td>
            </tr>
            <tr>
                <th>Website</th>
                <td>{{ hotel.website }}</td>
            </tr>
            <tr>
                <th>Capacity</th>
                <td>{{ hotel.capacity }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('hotel_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('hotel_edit', { 'id': hotel.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
